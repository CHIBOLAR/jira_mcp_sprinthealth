{
  "name": "jira-sprint-health-dashboard",
  "displayName": "Jira Sprint Health Dashboard",
  "version": "2.0.0",
  "description": "Production-ready Jira Sprint Analytics with advanced monitoring, predictive insights, and real-time dashboards. Features OAuth authentication, Redis caching, Prometheus monitoring, and Grafana visualization.",
  "author": "CHIBOLAR",
  "license": "MIT",
  "tags": [
    "jira",
    "sprint",
    "analytics",
    "dashboard",
    "monitoring",
    "oauth",
    "mcp",
    "atlassian",
    "agile",
    "burndown",
    "velocity",
    "grafana",
    "prometheus",
    "redis"
  ],
  "category": "productivity",
  "repository": {
    "type": "git",
    "url": "https://github.com/CHIBOLAR/jira_mcp_sprinthealth"
  },
  "smithery": {
    "deployment": {
      "type": "docker-compose",
      "file": "docker-compose.smithery.yml",
      "services": {
        "main": "jira-mcp-server",
        "dependencies": ["redis", "prometheus", "grafana"]
      },
      "ports": {
        "main": 3000,
        "grafana": 3001,
        "prometheus": 9090,
        "redis": 6379
      },
      "healthCheck": "/health",
      "environment": {
        "required": [
          "JIRA_URL",
          "JIRA_EMAIL", 
          "JIRA_API_TOKEN"
        ],
        "optional": [
          "REDIS_PASSWORD",
          "GRAFANA_PASSWORD",
          "LOG_LEVEL"
        ]
      }
    },
    "features": [
      "OAuth 2.0 Authentication with Atlassian",
      "Real-time Sprint Burndown Charts",
      "Team Velocity Analysis",
      "Predictive Sprint Completion",
      "Anomaly Detection",
      "Cross-Project Portfolio Analysis",
      "Redis Caching for Performance",
      "Prometheus Metrics Collection",
      "Grafana Dashboard Visualization",
      "Production-ready Monitoring",
      "Docker Health Checks",
      "Resource Optimization"
    ],
    "documentation": [
      "README.md",
      "DOCKER_DEPLOYMENT.md",
      "TESTING_GUIDE.md"
    ],
    "setupInstructions": [
      "1. Get Jira API token from https://id.atlassian.com/manage-profile/security/api-tokens",
      "2. Set environment variables: JIRA_URL, JIRA_EMAIL, JIRA_API_TOKEN",
      "3. Deploy with: docker-compose -f docker-compose.smithery.yml up -d",
      "4. Access Grafana at http://localhost:3001 (admin/admin)",
      "5. Access API at http://localhost:3000",
      "6. Start OAuth flow at http://localhost:3000/oauth/authorize"
    ]
  },
  "capabilities": {
    "mcp": {
      "stdio": true,
      "http": true,
      "oauth": true
    },
    "monitoring": {
      "prometheus": true,
      "grafana": true,
      "healthChecks": true,
      "logging": true
    },
    "analytics": {
      "predictive": true,
      "anomalyDetection": true,
      "portfolioAnalysis": true,
      "realTime": true
    }
  },
  "requirements": {
    "docker": ">=20.0.0",
    "dockerCompose": ">=2.0.0",
    "memory": "512MB",
    "cpu": "0.5",
    "storage": "1GB"
  },
  "support": {
    "documentation": "https://github.com/CHIBOLAR/jira_mcp_sprinthealth#readme",
    "issues": "https://github.com/CHIBOLAR/jira_mcp_sprinthealth/issues",
    "healthCheck": "/health"
  }
}
