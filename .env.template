# OAuth Configuration - External Authorization Server (Auth0/WorkOS/etc)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_ISSUER_URL=https://your-tenant.auth0.com
OAUTH_AUTHORIZATION_URL=https://your-tenant.auth0.com/authorize
OAUTH_TOKEN_URL=https://your-tenant.auth0.com/oauth/token
OAUTH_REGISTRATION_URL=https://your-tenant.auth0.com/oidc/register

# Server Configuration
THIS_HOSTNAME=http://localhost:3000
PORT=3000

# Jira Configuration (for connecting to Jira API)
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_API_TOKEN=your_jira_api_token_fallback

# Storage Strategy
TOKEN_STORAGE_STRATEGY=memory
REDIS_DSN=redis://127.0.0.1:6379

# Logging
LOG_LEVEL=debug
DEBUG=*