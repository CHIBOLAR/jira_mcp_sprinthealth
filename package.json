{
  "name": "jira-mcp-mvp",
  "version": "2.0.0",
  "description": "Enhanced Jira Sprint Dashboard MCP Server - Advanced analytics, predictive insights, and production-ready features",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "jira-mcp": "./cli.js",
    "jira-mcp-setup": "./setup-wizard.ts"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"No tests yet\" && exit 0",
    "clean": "rimraf dist",
    "cli": "node cli.js",
    
    "setup": "tsx setup-wizard.ts",
    "setup:oauth": "tsx setup-wizard.ts --oauth",
    "setup:auto": "tsx setup-wizard.ts --automatic",
    
    "oauth:server": "npm run build && node dist/oauth-server.js",
    "oauth:test": "curl http://localhost:3000/.well-known/mcp-configuration || echo 'Server not running'",
    "oauth:health": "curl http://localhost:3001/health || echo 'OAuth server not running on port 3001'",
    "oauth:start": "node start-oauth.cjs",
    "oauth:production": "$env:PORT=\"3001\"; node oauth-server-final.cjs",
    
    "docker:build": "docker build -t jira-mcp-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f jira-mcp-server",
    "docker:smithery": "docker-compose -f docker-compose.smithery.yml up -d",
    "docker:smithery:stop": "docker-compose -f docker-compose.smithery.yml down",
    "production:deploy": "npm run build && npm run docker:build && npm run docker:smithery",
    "monitoring:start": "docker-compose up prometheus grafana -d",
    "health:check": "./docker-healthcheck.sh",
    "cache:clear": "node cli.js cache clear",
    "validate:config": "node cli.js test",
    
    "claude:validate": "echo 'Checking Claude Desktop config...' && node -e \"const fs = require('fs'); const os = require('os'); const path = require('path'); const configPath = os.platform() === 'win32' ? path.join(os.homedir(), 'AppData', 'Roaming', 'Claude', 'claude_desktop_config.json') : path.join(os.homedir(), 'Library', 'Application Support', 'Claude', 'claude_desktop_config.json'); if (fs.existsSync(configPath)) { console.log('✅ Claude config found at:', configPath); const config = JSON.parse(fs.readFileSync(configPath, 'utf8')); console.log('MCP Servers:', Object.keys(config.mcpServers || {})); } else { console.log('❌ Claude config not found at:', configPath); }\""
  },
  "keywords": [
    "mcp",
    "jira",
    "sprint",
    "analytics",
    "dashboard",
    "burndown",
    "velocity",
    "agile",
    "oauth",
    "oauth2",
    "atlassian",
    "authentication",
    "integration",
    "claude-desktop",
    "dynamic-client-registration",
    "automatic-setup",
    "predictive-analytics",
    "anomaly-detection",
    "portfolio-analysis",
    "production-ready"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.2",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "figlet": "^1.6.0",
    "inquirer": "^12.6.3",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "open": "^10.1.2",
    "ora": "^6.3.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.7",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/jira-mcp-mvp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/jira-mcp-mvp/issues"
  },
  "homepage": "https://github.com/your-org/jira-mcp-mvp#readme"
}
